<article class="post has-text-centered">
    <div class="my-2">
        <label for="post-title">Title</label>
        <p id="post-title">{{ post.title }}</p>
    </div>
    <div class="my-2">
        <label for="post-text">Text</label>
        <p id="post-text">{{ post.post_text }}</p>
    </div>
    <div class="meta">
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>